---
import Layout from '../layouts/Layout.astro';

const careerTimeline = [
	{
		title: 'Chief Market Strategist',
		org: 'Bandaru Capital Studio',
		years: '2021 — Present',
		summary:
			'Reimagining how boutique funds communicate performance by blending macro research, design systems, and calm storytelling.',
	},
	{
		title: 'Head of Macro Narratives',
		org: 'Northbound Partners',
		years: '2014 — 2021',
		summary:
			'Led multi-channel research launches for fintech and family offices, translating complex derivatives exposure into human language.',
	},
];

const earlierRoles = [
	{
		title: 'Senior Research Analyst',
		org: 'Axis Insights Lab',
		years: '2010 — 2014',
	},
	{
		title: 'Equities Desk Strategist',
		org: 'Sparkline Securities',
		years: '2005 — 2010',
	},
];

---

<Layout>
	<div class="page">
		<a href="/" class="home-icon" aria-label="Return to home">
			<svg width="18" height="18" viewBox="0 0 24 24" fill="none" aria-hidden="true">
				<path
					d="M4 11.5 12 4l8 7.5M6.5 9v10.5h11V9"
					stroke="currentColor"
					stroke-width="1.4"
					stroke-linecap="round"
					stroke-linejoin="round"
				/>
			</svg>
		</a>
		<header class="intro">
			<div>
				<p class="eyebrow">About</p>
				<h1>Chittaranjan Bandaru</h1>
				<p>
					Two decades in public markets taught me that precision and restraint build the deepest trust.
					I craft minimalist systems that help founders, family offices, and media partners talk about
					performance without the noise.
				</p>
			</div>
			<div class="contact-card">
				<p class="label">Collaborations</p>
				<a class="primary" href="mailto:hello@ranjan.studio?subject=About%20Page%20Inquiry">Send an email</a>
				<a class="link" href="https://www.linkedin.com/in/chittaranjanbandaru" target="_blank" rel="noreferrer"
					>LinkedIn Profile ↗</a
				>
			</div>
		</header>

		<section class="career">
			<div class="section-heading">
				<p class="eyebrow">Career</p>
				<h2>Market operator first, storyteller always.</h2>
				<p>
					My approach pairs institutional rigor with contemporary brand craft, giving investors clarity on
					what matters while keeping compliance teams comfortable.
				</p>
			</div>
			<div class="timeline">
				{careerTimeline.map((role) => (
					<article class="card">
						<div class="card-head">
							<h3>{role.title}</h3>
							<span>{role.years}</span>
						</div>
						<p class="org">{role.org}</p>
						<p>{role.summary}</p>
					</article>
				))}
				<div class="early-roles">
					<h4>Earlier Roles</h4>
					<ul>
						{earlierRoles.map((role) => (
							<li>
								<div>
									<strong>{role.title}</strong>
									<span>{role.org}</span>
								</div>
								<p>{role.years}</p>
							</li>
						))}
					</ul>
				</div>
			</div>
		</section>

	</div>
</Layout>

<style>
	:global(body) {
		font-size: clamp(15px, 1.1vw, 17px);
	}

	.page {
		max-width: 1100px;
		margin: 0 auto;
		padding: 4rem 1.5rem 6rem;
		display: flex;
		flex-direction: column;
		gap: 4rem;
	}

	.home-icon {
		position: sticky;
		top: 1.5rem;
		left: 0;
		display: inline-flex;
		align-items: center;
		justify-content: center;
		width: 42px;
		height: 42px;
		border-radius: 50%;
		border: 1px solid rgba(255, 255, 255, 0.08);
		color: var(--text);
		background: rgba(255, 255, 255, 0.02);
		margin-bottom: 1.5rem;
		backdrop-filter: blur(6px);
		text-decoration: none;
	}

	.home-icon:hover {
		border-color: rgba(255, 255, 255, 0.25);
	}

	.eyebrow {
		text-transform: uppercase;
		letter-spacing: 0.24em;
		font-size: 0.75rem;
		color: var(--muted);
		margin-bottom: 0.75rem;
	}

	h1,
	h2,
	h3,
	h4 {
		margin: 0 0 0.75rem;
	}

	p {
		color: var(--muted);
		margin: 0 0 1rem;
	}

	.intro {
		display: flex;
		flex-wrap: wrap;
		justify-content: space-between;
		gap: 2rem;
		align-items: center;
	}

	.contact-card {
		padding: 1.5rem;
		border-radius: 1.2rem;
		background: rgba(255, 255, 255, 0.02);
		border: 1px solid rgba(255, 255, 255, 0.05);
		display: flex;
		flex-direction: column;
		gap: 0.75rem;
		min-width: 260px;
	}

	.contact-card .label {
		margin: 0;
		text-transform: uppercase;
		letter-spacing: 0.2em;
		font-size: 0.75rem;
		color: var(--muted);
	}

	.primary {
		display: inline-flex;
		justify-content: center;
		padding: 0.85rem 1.5rem;
		border-radius: 999px;
		text-decoration: none;
		font-weight: 500;
		background: linear-gradient(120deg, var(--accent), var(--accent-strong));
		color: #021712;
	}

	.link {
		text-decoration: none;
		color: var(--text);
		font-family: 'IBM Plex Mono', monospace;
		font-size: 0.85rem;
		letter-spacing: 0.08em;
	}

	.ghost {
		display: inline-flex;
		align-items: center;
		gap: 0.35rem;
		padding: 0.65rem 1.2rem;
		border-radius: 999px;
		border: 1px solid rgba(148, 163, 184, 0.4);
		color: var(--text);
		text-decoration: none;
		font-size: 0.9rem;
	}

	.ghost:hover {
		border-color: rgba(148, 163, 184, 0.7);
	}

	.section-heading {
		max-width: 600px;
	}

	.career .timeline {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
		gap: 1.5rem;
	}

	.card {
		padding: 1.75rem;
		border-radius: 1.25rem;
		background: rgba(4, 11, 20, 0.8);
		border: 1px solid rgba(255, 255, 255, 0.05);
		box-shadow: 0 15px 35px rgba(0, 0, 0, 0.35);
	}

	.card-head {
		display: flex;
		justify-content: space-between;
		align-items: baseline;
		gap: 0.5rem;
	}

	.card-head span {
		font-size: 0.85rem;
		color: var(--muted);
	}

	.org {
		color: var(--text);
		font-weight: 500;
		margin-bottom: 0.75rem;
	}

	.early-roles {
		padding: 1.75rem;
		border-radius: 1.25rem;
		border: 1px solid rgba(255, 255, 255, 0.05);
		background: rgba(255, 255, 255, 0.02);
	}

	.early-roles ul {
		list-style: none;
		padding: 0;
		margin: 0;
		display: flex;
		flex-direction: column;
		gap: 1rem;
	}

	.early-roles li {
		display: flex;
		justify-content: space-between;
		gap: 1rem;
	}

	.early-roles strong {
		display: block;
	}

	.early-roles span {
		color: var(--muted);
		font-size: 0.9rem;
	}


	@media (max-width: 720px) {
		.card-head {
			flex-direction: column;
			align-items: flex-start;
		}

		.early-roles li {
			flex-direction: column;
			align-items: flex-start;
		}
	}
</style>

